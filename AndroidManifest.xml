<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twofours.surespot"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:name="com.twofours.surespot.SurespotApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.twofours.surespot.activities.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.twofours.surespot.activities.StartupActivity"
            android:label="@string/title_activity_main"
            android:theme="@android:style/Theme.NoDisplay" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.twofours.surespot.activities.SignupActivity"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name="com.twofours.surespot.activities.FriendsActivity"
            android:label="@string/title_activity_friends" >
        </activity>
          <activity
            android:name="com.twofours.surespot.activities.NotificationsActivity"
            android:label="@string/title_activity_notifications" >
        </activity>
    </application>

</manifest>